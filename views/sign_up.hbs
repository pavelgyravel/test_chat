<div class="container">
	<div class="row">
		<div class="col-md-12">
			<div class="alert alert-danger {{#unless message}} hide{{/unless}}" role="alert" id="JQ_message">{{{message}}}</div>
			<form class="form-horizontal" method="post" id="JQ_sign_up_form">
			<fieldset>
			
			<!-- Form Name -->
			<legend>Sign up to chat</legend>
			
			<!-- Text input-->
			<div class="form-group">
			  <label class="col-md-4 control-label" for="email">Email</label>  
			  <div class="col-md-4">
			  <input id="JQ_email" name="email" type="text" placeholder="" class="form-control input-md" value="{{form.email}}">
			    
			  </div>
			</div>
			
			<!-- Text input-->
			<div class="form-group">
			  <label class="col-md-4 control-label" for="name">Name</label>  
			  <div class="col-md-4">
			  <input id="JQ_name" name="name" type="text" placeholder="" class="form-control input-md" value="{{form.name}}">
			    
			  </div>
			</div>
			
			<!-- Password input-->
			<div class="form-group">
			  <label class="col-md-4 control-label" for="password">Password</label>
			  <div class="col-md-4">
			    <input id="JQ_password" name="password" type="password" placeholder="" class="form-control input-md" >
			    
			  </div>
			</div>
			
			<!-- Password input-->
			<div class="form-group">
			  <label class="col-md-4 control-label" for="confirm_password">Password confirm</label>
			  <div class="col-md-4">
			    <input id="JQ_confirm_password" name="confirm_password" type="password" placeholder="" class="form-control input-md" >
			    
			  </div>
			</div>
			
			<!-- Button -->
			<div class="form-group">
			  <label class="col-md-4 control-label" for="sign_up"></label>
			  <div class="col-md-4">
			    <button id="JQ_sign_up" name="sign_up" class="btn btn-primary">Sign up</button>
			    - or - <a href="/login">Login</a> / <a href="/restore">Restore password</a>
			  </div>
			</div>
			
			</fieldset>
			</form>
		</div>
	</div>
</div>